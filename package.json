{
    "name": "musicalchairs",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "concurrently \"bun run api\" \"bun run pwa\" -n \"api,pwa\" --kill-others-on-fail --handle-input --default-input-target 0",
        "api": "cd apps/MusicalChairs.Api && dotnet watch run",
        "pwa": "cd apps/MusicalChairs.Pwa && bun run dev",
        "devDb": "docker run -p 5432:5432 --name musicalChairsDb -e POSTGRES_PASSWORD=postgres -d postgres"
    },
    "devDependencies": {
        "concurrently": "^9.1.0"
    }
}
